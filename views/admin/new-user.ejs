<%- include('../layouts/header.ejs') %>

<div class="container mt-4">
  <div class="row">
  <div class="col-md-6">
    <h1 class="text-center">Add User</h1>
        <form id="login-form" class="form" action="" method="post" onsubmit="return validateForm()">
                <label for="name" class="text-white">Name:</label><br>
                <input type="name" name="name" id="name" placeholder="Name" class="form-control" >
                <label for="email" class="text-white">Email:</label><br>
                <input type="email" name="email" id="email" placeholder="Email" class="form-control" >
                <label for="password" class="text-white">Password:</label><br>
                <input type="password" name="password" id="password" placeholder="Password" class="form-control" >
            
            <button type="submit" class="btn btn-success mt-4">Add User</button>
            <button type="submit" class="btn btn-primary mt-4"
            style="background-color:rgb(11, 89, 233); "><a style="color: white; text-decoration: none;" href="/admin/dashboard">Dashboard</a></button>
            </form> 
    </div>
  </div>
</div>  


<script>
    function validateForm() {
      let inputs = document.getElementsByTagName("input")

      for(let i=0; i< inputs.length; i++){
        if(inputs[i].value == ""){
          alert("All fields are required!!")
          return false;
        }
      }
      return true;
    }
</script>
